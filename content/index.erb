<header class="home">
  <h1>
    <%= @config[:site][:name] %>
  </h1>
  <p class="slogan"><%= @config[:site][:slogan] %></p>
  <nav>
    <ul>
      <li><%= link_to 'Blog', @config[:blog][:url], :title => 'Blog',   :rel => 'nofollow' %></li>
      <li><%= link_to 'Link 1', '#',                :title => 'Link 1', :rel => 'nofollow' %></li>
      <li><%= link_to 'Link 2', '#',                :title => 'Link 2', :rel => 'nofollow' %></li>
    </ul>
  </nav>
</header>

<main role="main">

  <section class="about">
    <div>
      <h2>About</h2>
      <p><%= Lorem.paragraph %></p>
    </div>
    <div>
      <img src="/images/img300x200.png" alt="photo">
    </div>
  </section>

  <section class="work">
    <div class="tagline" role="article">
      <h2>Work</h2>
      <p><%= Lorem.words 30 %></p>
    </div>
    <div class="work-img">
      <img src="/images/img300x200.png" alt="img">
      <p class="work-description">Description</p>
    </div>
    <div class="work-img">
      <img src="/images/img300x200.png" alt="img2">
      <p class="work-description">Description</p>
    </div>
    <div class="work-img">
      <img src="/images/img300x200.png" alt="img3">
      <p class="work-description">Description</p>
    </div>
    <div class="work-img">
      <img src="/images/img300x200.png" alt="img4">
      <p class="work-description">Description</p>
    </div>
  </section>
</main>

<%= render '/partials/footer.*' %>
